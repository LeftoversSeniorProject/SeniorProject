<resources>
    <!-- Edited by Chris Curreri
         Below are the different themes. They can be changed if
         theme is modified in the xml file.-->


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Android API 14+. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
       <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PinkTheme" parent= "AppTheme">
        <item name = "android:background">#FFC6D5</item>
        <item name = "android:textColor">#FFFFFF</item>
        <item name = "android:buttonStyle">@style/Base.Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="BlueTheme" parent= "AppTheme">
        <item name = "android:background">#6FA7EE</item>
        <item name = "android:textColor">#FFFFFF</item>
        <item name = "android:buttonStyle">@style/BlueButton</item>
    </style>

    <style name= "BlueButton" parent= "Base.Widget.AppCompat.Button.Colored">
        <item name = "android:background">#0E2DDF</item>
    </style>





</resources>
